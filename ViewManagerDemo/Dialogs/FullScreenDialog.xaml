<uview:Dialog
    x:Class="ViewManagerDemo.Dialogs.FullScreenDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ViewManagerDemo.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uview="clr-namespace:Unicorn.ViewManager;assembly=Unicorn.ViewManager"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:Name="SELF"
    Background="White"
    mc:Ignorable="d">
    <Button
        HorizontalAlignment="Center"
        Height="34"
        Command="uview:ViewCommands.ClosePopupItem"
        CommandParameter="{Binding ElementName=SELF}"
        Content="这是一个全屏Dialog，其实就是没有设置Width、Height等布局属性，点此可关闭" />
</uview:Dialog>
